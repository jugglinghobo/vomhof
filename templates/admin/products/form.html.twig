{% extends 'admin/base_form.html.twig' %}

{% block header %}
{% endblock %}

{% block formfields %}
  <div class="form-group">
    <label for="identifier">{{ 'models.product.attributes.identifier'|trans }}</label>
    <input type="text" class="form-control" id="identifier" value="{{ product.identifier }}">
  </div>
  <div class="form-group">
    <label for="name">{{ 'models.product.attributes.name'|trans }}</label>
    <input type="text" class="form-control" id="name" value="{{ product.name }}">
  </div>
  <div class="form-group">
    <label for="price">{{ 'models.product.attributes.price'|trans }}</label>
    <div class="input-group">
      <input type="text" class="form-control" id="price" value="{{ product.price|number_format(2, '.', '') }}">
      <div class="input-group-append">
        <span class="input-group-text">CHF</span>
      </div>
    </div>
  </div>
{% endblock %}
